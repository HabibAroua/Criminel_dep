<!-- Add police station  -->
<div class="container">
		<div class="row">
      <div class="col-lg-4 col-md-4 col-sm-xs-4" id="add_police_station">
        <center>
          <h3>
            Add new police station
          </h3>
        </center>
        <%= form_tag :action => "insert"  do %>
          <div id="hide">
            <%= text_field 'id' ,'id' , :value=>@governorate.id  %></p>
          </div>
          <table>
            <tr>
              <td><p><label for='title'>Title</label></td>
              <td><%= text_field 'police_station', 'title' , :id=>"title" , class:"form-control" %></p></td>
            </tr>
            <tr>
              <td><p><label for='address'>Address</label></td>
              <td><%= text_field 'police_station', 'address' , :id=>"address" , class:"form-control" %></p></td>
            </tr>
            <tr>
              <td>
                <p><label for="postal_code">Postal code</label>
              </td>
              <td>
                <%= number_field 'police_station', 'postal_code', :id=>"postal_code" , :max=>9999 , :min=>1000 , class:"form-control" %></p>
              </td>
            </tr>
            <tr>
              <td><p><label for="telephone">Telephone</label></td>
              <td>
                <%= telephone_field 'police_station', 'telephone' , :id=>"telephone" , class:"form-control" %></p>
              </td>
            </tr>
            <tr>
              <td>
                <p><label for="fax">Fax</label>
              </td>
              <td>
                <%= telephone_field 'police_station', 'fax' , :id=>"fax" , class:"form-control" %></p>
              </td>
            </tr>
          </table>
          <%= submit_tag "Create" , class:"btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
