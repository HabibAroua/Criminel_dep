<script>
  $(
    function()
    {
      $("#hide").hide();
    }
   );
  $(
    function()
    {
      $('#add_police_station').hide();
    }
  );
  $(
    function()
    {
      $("#bt_hide_add_police_station").hide();
    }
  );
  $(document).ready
	(
		function()
		{
			$("#bt_show_add_police_station").click
			(
				function()
				{
					$("#add_police_station").show();
          $("#bt_show_add_police_station").hide();
          $("#bt_hide_add_police_station").show();
				}
			);
		}
	);
  $(document).ready
	(
		function()
		{
			$("#bt_hide_add_police_station").click
			(
				function()
				{
					$("#add_police_station").hide();
          $("#bt_show_add_police_station").show();
          $("#bt_hide_add_police_station").hide();
				}
			);
		}
	);
</script>
