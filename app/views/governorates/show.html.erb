<!-- Add police station  -->
<h1>Add new police station</h1>
<%= form_tag :action => "insert" do %>
<p><label for="book_title">Address</label>
  <%= text_field 'police_station', 'address' %></p>
  <p><label for="book_title">Address</label>
  <%= text_field 'police_station', 'postal_code' %></p>
  <p><label for="book_title">Code Postal</label>
  <%= text_field 'police_station', 'telephone' %></p>
  <p><label for="book_title">Telephone</label>
  <%= number_field 'police_station', 'fax' %></p>
  <p><label for="book_options">Options</label><br/>
  <%= submit_tag "Create" %>
<% end %>


<!-- end of block -->
<h1>Police Stations</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Postal code</th>
      <th>Telephone</th>
      <th>Fax</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @police_stations.each do |police_station| %>
      <tr>
        <td><%= police_station.address %></td>
        <td><%= police_station.postal_code %></td>
        <td><%= police_station.telephone %></td>
        <td><%= police_station.fax %></td>
        <td><%= link_to 'Show', police_station %></td>
        <td><%= link_to 'Edit', edit_police_station_path(police_station) %></td>
        <td><%= link_to 'Destroy', police_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>