<div class="container">
		<div class="row">
      <div class="col-lg-4 col-md-4 col-sm-xs-4">
        <center>
          <h3>Add new police station</h3>
        </center>
        <%= form_tag :action => "insert"  do %>
          <div id="hide">
            <%= text_field 'id' ,'id' , :value=>@governorate.id  %></p>
          </div>
          <table>
            <tr>
              <td><p><label for='address'>Address</label></td>
              <td><%= text_field 'police_station', 'address' , :id=>"address" , class:"form-control" %></p></td>
            </tr>
            <tr>
              <td><p><label for="postal_code">Postal code</label></td>
              <td><%= number_field 'police_station', 'postal_code', :id=>"postal_code" , :max=>9999 , :min=>1000 , class:"form-control" %></p></td>
            </tr>
            <tr>
              <td><p><label for="telephone">Telephone</label></td>
              <td><%= telephone_field 'police_station', 'telephone' , :id=>"telephone" , class:"form-control" %></p></td>
            </tr>
            <tr>
              <td><p><label for="fax">Fax</label></td>
              <td><%= telephone_field 'police_station', 'fax' , :id=>"fax" , class:"form-control" %></p></td>
            </tr>
          </table>
          <%= submit_tag "Create" , class:"btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-xs-8">
        <!-- end of block -->
        <center>
          <h3>Police Stations</h3>
        </center>
        <table class="table" id="dt" style="width: 100%;">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Address</th>
              <th scope="col">Postal</th>
              <th scope="col">Telephone</th>
              <th scope="col">Fax</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @police_stations.each do |police_station| %>
              <tr>
                <td><%= police_station.address %></td>
                <td><%= police_station.postal_code %></td>
                <td><%= police_station.telephone %></td>
                <td><%= police_station.fax %></td>
                <td><%= link_to 'Show', police_station %></td>
                <td><%= link_to 'Edit', edit_police_station_path(police_station) %></td>
                <td><%= link_to 'Destroy', police_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
