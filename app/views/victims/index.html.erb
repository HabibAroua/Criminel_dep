<p id="notice"><%= notice %></p>

<h1>Victims</h1>

<table>
  <thead>
    <tr>
      <th>Cin</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Problem</th>
      <th>Cause of death</th>
      <th>Date of death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @victims.each do |victim| %>
      <tr>
        <td><%= victim.cin %></td>
        <td><%= victim.first_name %></td>
        <td><%= victim.last_name %></td>
        <td><%= victim.problem %></td>
        <td><%= victim.cause_of_death %></td>
        <td><%= victim.date_of_death %></td>
        <td><%= link_to 'Show', victim %></td>
        <td><%= link_to 'Edit', edit_victim_path(victim) %></td>
        <td><%= link_to 'Destroy', victim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

