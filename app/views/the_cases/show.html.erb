		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-xs-12">
          <div id="form-victims">
            <h4>Victims</h4>
            <table class="table table-striped table-dark">
              <thead>
                <tr>
                  <th>Cin</th>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Problem</th>
                  <th>Cause of death</th>
                  <th>Date of death</th>
                  <th><center>Show</center></th>
                  <th><center>Edit</center></th>
                  <th><center>Delete</center></th>
                </tr>
              </thead>
            
              <tbody>
                <% @victims.each do |victim| %>
                  <tr>
                    <td><%= victim.cin %></td>
                    <td><%= victim.first_name %></td>
                    <td><%= victim.last_name %></td>
                    <td><%= victim.problem %></td>
                    <td><%= victim.cause_of_death %></td>
                    <td><%= victim.date_of_death %></td>
                    <td>
                      <%= link_to '', victim , class:"glyphicon glyphicon-eye-open" %>
                    </td>
                    <td>
                      <%= link_to '' , edit_victim_path(victim)  , class:"glyphicon glyphicon-pencil"%>
                    </td>
                    <td>
                      <%= link_to '',victim, method: :delete, data: { confirm: 'Are you sure?' } , class:"glyphicon glyphicon-trash" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
