<p id="notice"><%= notice %></p>

<h1>Waitnesses</h1>

<table>
  <thead>
    <tr>
      <th>Cin</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Telephone</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waitnesses.each do |waitness| %>
      <tr>
        <td><%= waitness.cin %></td>
        <td><%= waitness.first_name %></td>
        <td><%= waitness.last_name %></td>
        <td><%= waitness.telephone %></td>
        <td><%= waitness.content %></td>
        <td><%= link_to 'Show', waitness %></td>
        <td><%= link_to 'Edit', edit_waitness_path(waitness) %></td>
        <td><%= link_to 'Destroy', waitness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Waitness', new_waitness_path %>
