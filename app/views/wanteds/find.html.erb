<center>
  <h1>Find wanted</h1>
</center>
<table class="table table-striped table-dark" id="example">
  <thead>
	<tr>
	  <th>
		<center>
		  Full name
        </center>
      </th>
	  <th>
	    <center>
	      Cin
        </center>
      </th>
      <th>
		<center>
		  Date of birth
        </center>
      </th>
      <th>
		<center>
		  Charged for
        </center>
      </th>
      <th>
		<center>
		  Status
        </center>
      </th>
      <th>
		<center>
		  Content
        </center>
      </th>
      <th>
		<center>
		  Show
		</center>
      </th>
    </tr>
  </thead>
  <tbody>
	<% @wanted.each do |culprit| %>
	  <tr>
        <td>
		  <center>
		    <%= culprit.first_name %> <%= culprit.last_name %>
          </center>    
        </td>
		<td>
		  <center>
		   <%= culprit.cin %>
          </center>
        </td>
        <td>
		  <center>
		   <%= culprit.date_of_birth %>
          </center>
        </td>
        <td>
		  <center>
		    <%= culprit.charged_for %>
          </center>
        </td>
        <td>
		  <center>
		    <%= culprit.status %>
          </center>
        </td>
        <td>
		  <center>
            <%= culprit.content %>
          </center>
        </td>
        <td>
		  <center>
		    <%= link_to '', culprit , class:"glyphicon glyphicon-eye-open" %>
          </center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
  $("#example").dataTable();
</script>