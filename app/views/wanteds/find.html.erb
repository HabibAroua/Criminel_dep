<center>
  <h1>Find wanted</h1>
</center>
<table class="table table-striped table-dark">
  <thead>
	<tr>
	  <th>
	    <center>
	      Cin
        </center>
      </th>
      <th>
		<center>
		  First name
        </center>
      </th>
      <th>
		<center>
		  Last name
        </center>
      </th>
      <th>
		<center>
		  Date of birth
        </center>
      </th>
      <th>
		<center>
		  Charged for
        </center>
      </th>
      <th>
		<center>
		  Status
        </center>
      </th>
      <th>
		<center>
		  Content
        </center>
      </th>
      <th>
		<center>
		  Show
		</center>
      </th>
    </tr>
  </thead>
  <tbody>
	<% @wanted.each do |culprit| %>
	  <tr>
		<td>
		  <center>
		   <%= culprit.cin %>
          </center>
        </td>
        <td>
		  <center>
		    <%= culprit.first_name %>
          </center>    
        </td>
        <td>
		  <center>
		    <%= culprit.last_name %>
          </center>    
        </td>
        <td>
		  <center>
		   <%= culprit.date_of_birth %>
          </center>
        </td>
        <td>
		  <center>
		    <%= culprit.charged_for %>
          </center>
        </td>
        <td>
		  <center>
		    <%= culprit.status %>
          </center>
        </td>
        <td>
		  <center>
            <%= culprit.content %>
          </center>
        </td>
        <td>
		  <center>
		    <%= link_to '', culprit , class:"glyphicon glyphicon-eye-open" %>
          </center>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>