<p id="notice"><%= notice %></p>

<h1>Culprits</h1>

<table>
  <thead>
    <tr>
      <th>Cin</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Charged for</th>
      <th>Status</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @culprits.each do |culprit| %>
      <tr>
        <td><%= culprit.cin %></td>
        <td><%= culprit.first_name %></td>
        <td><%= culprit.last_name %></td>
        <td><%= culprit.date_of_birth %></td>
        <td><%= culprit.charged_for %></td>
        <td><%= culprit.status %></td>
        <td><%= culprit.content %></td>
        <td><%= link_to 'Show', culprit %></td>
        <td><%= link_to 'Edit', edit_culprit_path(culprit) %></td>
        <td><%= link_to 'Destroy', culprit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

