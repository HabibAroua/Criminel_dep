<script>
  $(
    function()
    {
      $("#hide").hide();
    }
   );
  
   $(
    function()
    {
      $('#add_case').hide();
    }
  );
  $(
    function()
    {
      $("#bt_hide_add_case").hide();
    }
  );
  
  $(document).ready
	(
		function()
		{
			$("#bt_show_add_case").click
			(
				function()
				{
					$("#add_case").show();
          $("#bt_show_add_case").hide();
          $("#bt_hide_add_case").show();
				}
			);
		}
	);
  
  $(document).ready
	(
		function()
		{
			$("#bt_hide_add_case").click
			(
				function()
				{
					$("#add_case").hide();
          $("#bt_show_add_case").show();
          $("#bt_hide_add_case").hide();
				}
			);
		}
	);
</script>
