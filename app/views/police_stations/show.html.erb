<center>
  <h1><%= @police_station.title %></h1>
  <table style="border-collapse: collapse; border: 1px solid black; width: 50%; text-align: center;">
    <tr border: 1px solid black;">
      <td style="border: 1px solid black;"><strong>Address</strong></td>
      <td style="border: 1px solid black;"><%= @police_station.address %></td>
    </tr>
    <tr style="border: 1px solid black;">
      <td style="border: 1px solid black;"><strong>Postal code</strong></td>
      <td style="border: 1px solid black;"><%= @police_station.postal_code %></td>
    </tr>
    <tr style="border: 1px solid black;">
      <td style="border: 1px solid black;"><strong>Telephone</strong></td>
      <td style="border: 1px solid black;"><%= @police_station.telephone %></td>
    </tr>
    <tr style="border: 1px solid black;">
      <td style="border: 1px solid black;"><strong>Fax</strong></td>
      <td style="border: 1px solid black;"><%= @police_station.fax %></td>
    </tr>
  </table>
  
  <%= link_to 'Edit', edit_police_station_path(@police_station) %> |
  <%= link_to 'Back', police_stations_path %>
</center>
<br>
<center>
  <h1>
    All cases
  </h1>
</center>
<table class="table table-striped table-dark" id="example">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Complainant cin</th>
      <th>Complainant first name</th>
      <th>Complainant last name</th>
      <th>Complainant telephone</th>
      <th>Location</th>
      <th>Address</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @the_cases.each do |the_case| %>
      <tr>
        <td><%= the_case.title %></td>
        <td><%= the_case.type_case %></td>
        <td><%= the_case.complainant_cin %></td>
        <td><%= the_case.complainant_first_name %></td>
        <td><%= the_case.complainant_last_name %></td>
        <td><%= the_case.complainant_telephone %></td>
        <td><%= the_case.location %></td>
        <td><%= the_case.address %></td>
        <td><%= link_to 'Show', the_case %></td>
        <td><%= link_to 'Edit', edit_the_case_path(the_case) %></td>
        <td><%= link_to 'Destroy', the_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- using javascript -->
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
  $("#example").dataTable();
</script>